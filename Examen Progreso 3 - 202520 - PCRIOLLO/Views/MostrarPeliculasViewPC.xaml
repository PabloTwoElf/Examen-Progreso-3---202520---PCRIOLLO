            Title="MostrarPeliculasViewPC">  

   <ContentPage.BindingContext>  
       <viewModels:EnlistarViewModelPC />  
   </ContentPage.BindingContext>  

   <ContentPage.Content>  
       <StackLayout Padding="30" Spacing="10">  
